<div class="flex flex-wrap w-full md:w-2/3 lg:w-1/2 h-full gap-5 mx-auto justify-center">
  <div class="w-full">
    <h2 class="text-center text-4xl">Log In</h2>
  </div>

  <hr class="w-full" />

  <%=
    form_for(
      resource,
      as: resource_name,
      url: session_path(resource_name),
      html: {
        class: 'w-full md:w-2/3 lg:w-2/4 flex flex-wrap gap-4'
      }
    ) do |f|
  %>
    <% if flash.any? %>
      <div class="flex w-full bg-red-300 rounded-md p-5 flex-wrap gap-3">
        <div class="w-full block">
          <% flash.each do |_, msg| %>
            <%= content_tag :p, msg, class: "block w-full text-red-900 text-md" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="w-full">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.email_field :email,
                         autofocus: true,
                         autocomplete: "email",
                         class: "
                          w-full focus:ring-indigo-500 focus:border-indigo-500 block w-full
                          sm:text-sm border-gray-300 rounded-md mt-1"
      %>
    </div>

    <div class="w-full">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.password_field :password,
                            autocomplete: "current-password",
                            class: "
                              w-full focus:ring-indigo-500 focus:border-indigo-500 block w-full
                              sm:text-sm border-gray-300 rounded-md mt-1"
      %>
    </div>

    <div class="w-full">
      <%= f.submit "LOG IN", class:
                                'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm
                                font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700
                                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500
                                cursor-pointer w-full'
      %>
    </div>
  <% end %>
</div>
