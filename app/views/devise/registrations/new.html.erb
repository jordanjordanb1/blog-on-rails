<div class="flex flex-wrap w-full md:w-2/3 h-full gap-5 mx-auto justify-center">
  <div class="w-full">
    <h2 class="text-center text-4xl">Register</h2>
  </div>

  <hr class="w-full" />

  <%=
    form_for(
      resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: {
        class: 'w-full md:w-2/3 lg:w-3/4 flex flex-wrap gap-4'
      }
    ) do |f|
  %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="w-full">
      <%= f.label :name, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.text_field :name,
                        autofocus: true,
                        autocomplete: "name",
                        class: "
                          w-full focus:ring-indigo-500 focus:border-indigo-500 block w-full
                          sm:text-sm border-gray-300 rounded-md mt-1"
      %>
    </div>

    <div class="w-full">
      <%= f.label :email, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.email_field :email,
                         autocomplete: "email",
                         class: "
                          w-full focus:ring-indigo-500 focus:border-indigo-500 block w-full
                          sm:text-sm border-gray-300 rounded-md mt-1"
      %>
    </div>

    <div class="w-full">
      <%= f.label :password, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.password_field :password,
                            autocomplete: "new-password",
                            class: "
                              w-full focus:ring-indigo-500 focus:border-indigo-500 block w-full
                              sm:text-sm border-gray-300 rounded-md mt-1"
      %>

      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="w-full">
      <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700 cursor-pointer' %>

      <%= f.password_field :password_confirmation,
                            autocomplete: "new-password",
                            class: "
                              w-full focus:ring-indigo-500 focus:border-indigo-500
                              block w-full sm:text-sm border-gray-300 rounded-md mt-1"
      %>
    </div>

    <div class="w-full">
      <%= f.submit "REGISTER", class:
                                'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm
                                font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700
                                focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500
                                cursor-pointer w-full'
      %>
    </div>
  <% end %>
</div>
